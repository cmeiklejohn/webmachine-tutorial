%%-*- mode: erlang -*-

{sub_dirs, ["rel"]}.
{deps_dir, ["deps"]}.
{erl_opts, [{parse_transform, lager_transform},
            debug_info,
            warnings_as_errors,
            {platform_define, "18", monotonic_time}]}.

{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.
{erlydtl_opts, [
            {compiler_options, [report, return, debug_info]}]}.

{deps, [
    {erlydtl, "0.7.0",
     {git, "git://github.com/evanmiller/erlydtl.git", {tag, "6a9845f"}}},
    {lager, ".*",
     {git, "git://github.com/basho/lager", {tag, "3.0.1"}}},
    {webmachine, "1.10.*",
     {git, "git://github.com/webmachine/webmachine", {tag, "1.10.8"}}}]}.

